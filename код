@app.route('/feed/<int:pet_id>', methods=['POST'])
def feed_pet(pet_id):
    user = get_current_user()
    if not user:
        return redirect(url_for('login'))
    db = get_db()
    pet = db.execute('SELECT * FROM pets WHERE id=? AND user_id=?', (pet_id, user['id'])).fetchone()
    if pet:
        new_hunger = min(pet['hunger'] + 20, 100)
        db.execute('UPDATE pets SET hunger=?, last_updated=? WHERE id=?', (new_hunger, datetime.now().strftime('%Y-%m-%d %H:%M:%S'), pet_id))
        db.commit()
    return redirect(url_for('pet_detail', pet_id=pet_id))

@app.route('/play/<int:pet_id>', methods=['POST'])
def play_pet(pet_id):
    user = get_current_user()
    if not user:
        return redirect(url_for('login'))
    db = get_db()
    pet = db.execute('SELECT * FROM pets WHERE id=? AND user_id=?', (pet_id, user['id'])).fetchone()
    if pet:
        new_happiness = min(pet['happiness'] + 20, 100)
        db.execute('UPDATE pets SET happiness=?, last_updated=? WHERE id=?', (new_happiness, datetime.now().strftime('%Y-%m-%d %H:%M:%S'), pet_id))
        db.commit()
    return redirect(url_for('pet_detail', pet_id=pet_id))

if __name__ == '__main__':
    if not os.path.exists(DATABASE):
        init_db()
    app.run(debug=True, host='0.0.0.0', port=5000)
